<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WinsorApps.MAUI.CateringManagement.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WinsorApps.MAUI.CateringManagement"
    xmlns:shared="clr-namespace:WinsorApps.MAUI.Shared.Pages;assembly=WinsorApps.MAUI.Shared"
    Shell.FlyoutBehavior="Flyout"
    Title="Winsor - Catering Service Admin">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Help"
        ContentTemplate="{DataTemplate shared:HelpPage}"
        Route="HelpPage"/>
</Shell>
