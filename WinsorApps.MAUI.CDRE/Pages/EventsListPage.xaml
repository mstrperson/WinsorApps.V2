<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WinsorApps.MAUI.CDRE.ViewModels"
             xmlns:styles="clr-namespace:WinsorApps.MAUI.CDRE.Resources.Styles"
             x:DataType="vm:EventListViewModel"
             x:Class="WinsorApps.MAUI.CDRE.Pages.EventsListPage"
             Title="My Recurring Events">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Refresh"
                     IconImageSource="{FontImage FontFamily=FontAwesomeSolid, Color=White,
                     Glyph={x:Static styles:FontAwesomeSolid.SyncAlt}}"
                     Command="{Binding CreateCommand}"/>
    </ContentPage.ToolbarItems>
    <ScrollView>
        <VerticalStackLayout
            HorizontalOptions="Center">
            <ListView x:Name="EventsListView"
                      ItemsSource="{Binding Events}"
                      VerticalOptions="FillAndExpand"
                      HasUnevenRows="False"
                      RowHeight="80"
                      IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                      CachingStrategy="RetainElement">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10" x:DataType="vm:RecurringEventViewModel"
                                   RowDefinitions="32,32"
                                   ColumnDefinitions="auto,auto">
                                <Grid Grid.RowSpan="2" Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="32"/>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" Source="{FontImage FontFamily=FontAwesomeSolid, Color=White,
                                                                Glyph={x:Static styles:FontAwesomeSolid.CalendarAlt}}"
                                                                HorizontalOptions="Fill" VerticalOptions="Fill"/>
                        </Grid>
                        <Label Text="{Binding Summary}" Grid.Column="1"
                                          LineBreakMode="NoWrap" MaxLines="1"
                                          FontAttributes="Bold" FontSize="Medium"/>
                        <Label Text="{Binding Description}" Grid.Column="1"
                                          LineBreakMode="NoWrap" MaxLines="1"
                                          FontSize="Micro"/>
                        <Label Text="{Binding Attendees}" Grid.Column="1"
                                          LineBreakMode="NoWrap" MaxLines="1"
                                          FontSize="Micro"/>
                        <Label Text="{Binding CycleDays}" Grid.Column="1"
                                          LineBreakMode="NoWrap" MaxLines="1"
                                          FontSize="Micro"/>
                        </Grid>

                    </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <HorizontalStackLayout
                HorizontalOptions="Center">
                <HorizontalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding CreateCommand}"/>
                </HorizontalStackLayout.GestureRecognizers>
                <Image Source="{FontImage FontFamily=FontAwesomeSolid, Color=White,
                Glyph={x:Static styles:FontAwesomeSolid.PlusCircle}}"/>
                <Label Text="Create New Event"
                 LineBreakMode="NoWrap" MaxLines="1"
                 FontAttributes="Bold" FontSize="Small"/>
            </HorizontalStackLayout>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>