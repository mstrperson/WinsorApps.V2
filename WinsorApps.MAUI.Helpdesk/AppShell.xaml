<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WinsorApps.MAUI.Helpdesk.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WinsorApps.MAUI.Helpdesk"
    xmlns:pages="clr-namespace:WinsorApps.MAUI.Helpdesk.Pages"
    xmlns:devices="clr-namespace:WinsorApps.MAUI.Helpdesk.Pages.Devices"
    Shell.FlyoutBehavior="Flyout"
    Title="WinsorApps.MAUI.Helpdesk">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Cheqroom Quick Actions"
        ContentTemplate="{DataTemplate pages:CheqroomQuickTaskPage}"
        Route="QuickCheckout" />

    <ShellContent
        Title="Cheqroom Checkout Search"
        ContentTemplate="{DataTemplate pages:CheckoutSearchPage}"
        Route="QuickCheckin" />

    <ShellContent
        Title="Devices"
        ContentTemplate="{DataTemplate devices:DeviceSearchPage}"
        Route="DeviceSearchPage" />

</Shell>
