<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WinsorApps.MAUI.TeacherAssessmentCalendar.ViewModels"
             xmlns:conv="clr-namespace:WinsorApps.MAUI.Shared.Converters;assembly=WinsorApps.MAUI.Shared"
             xmlns:svm="clr-namespace:WinsorApps.MAUI.Shared.AssessmentCalendar.ViewModels;assembly=WinsorApps.MAUI.Shared.AssessmentCalendar"
             xmlns:gvm="clr-namespace:WinsorApps.MAUI.Shared.ViewModels;assembly=WinsorApps.MAUI.Shared"
             x:DataType="vm:NotesPageViewModel"
             x:Class="WinsorApps.MAUI.TeacherAssessmentCalendar.Pages.CalendarNotes"
             Title="Assessment Calendar Notes">
    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:BoolInverter x:Key="Invert" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Note"
                      IconImageSource="plus.png"
                      Command="{Binding NewCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout
                HorizontalOptions="Center">
                <HorizontalStackLayout
                    Margin="0"
                    Padding="0"
                    IsVisible="{Binding Busy}">
                    <Label
                        StyleClass="SubHeader"
                        Text="{Binding BusyMessage}" />
                    <Image
                        StyleClass="loading_symbol"/>
                </HorizontalStackLayout>
                <Border
                    StrokeThickness="1">
                    <Grid
                        IsVisible="{Binding ShowEditor}"
                        WidthRequest="1600"
                        HorizontalOptions="Center"
                        ColumnDefinitions="200,500,200,700"
                        RowDefinitions="*,*,*">
                        <Label
                            StyleClass="H3"
                            Text="Date:"
                            HorizontalOptions="End"
                            Grid.Row="0"
                            Grid.Column="0" />
                        <DatePicker
                            Date="{Binding SelectedNote.Date}" 
                            WidthRequest="500"
                            HeightRequest="50"
                            Grid.Row="0"
                            Grid.Column="1"/>
                        <Label
                            StyleClass="H3"
                            Text="Note:"
                            HorizontalOptions="End"
                            Grid.Row="0"
                            Grid.Column="2" />
                        <Entry
                            Text="{Binding SelectedNote.Note}"
                            WidthRequest="700"
                            HeightRequest="50" 
                            Grid.Row="0"
                            Grid.Column="3"/>
                        <CollectionView
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="4"
                            HorizontalOptions="Center"
                            FlowDirection="LeftToRight"
                            BackgroundColor="Transparent"
                            ItemsSource="{Binding SelectedNote.AffectedClasses}">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Horizontal" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="gvm:SelectableLabelViewModel">
                                    <Grid
                                        ColumnDefinitions="50,100">
                                        <CheckBox
                                            IsChecked="{Binding IsSelected}" 
                                            Grid.Column="0"
                                            HorizontalOptions="End"/>
                                        <Label
                                            Text="{Binding Label}"
                                            Grid.Column="1">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding SelectCommand}"/>
                                            </Label.GestureRecognizers>
                                        </Label>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        <Button
                            HorizontalOptions="Center"
                            Text="Save"
                            Command="{Binding SelectedNote.SaveCommand}"
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="4"/>
                    </Grid>
                </Border>
                <BoxView
                    StyleClass="Bar"
                    IsVisible="{Binding ShowEditor}" />
                <CollectionView
                    ItemsSource="{Binding Notes}"
                    WidthRequest="1600"
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center">
                    <CollectionView.Header>
                        <Grid
                            ColumnDefinitions="300,500,700,100"
                            RowDefinitions="*,*"
                            WidthRequest="1600">
                            <Label
                                StyleClass="H3"
                                Text="Date"
                                Grid.Column="0" />
                            <Label
                                StyleClass="H3"
                                Text="Note"
                                Grid.Column="1" />
                            <Label
                                StyleClass="H3"
                                Text="Affected Classes"
                                Grid.Column="2" />
                            <Label
                                StyleClass="H3"
                                Text=""
                                Grid.Column="3" />
                            <BoxView
                                StyleClass="Bar"
                                Margin="0"
                                WidthRequest="1600"
                                HeightRequest="4"    
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="4"/>
                        </Grid>
                    </CollectionView.Header>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="vm:NoteViewModel">
                            <Grid
                                ColumnDefinitions="300,500,700,100"
                                RowDefinitions="50,*"
                                WidthRequest="1600">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding SelectCommand}"/>
                                </Grid.GestureRecognizers>
                                <Label
                                    Text="{Binding Date, StringFormat='{0:dddd dd MMMM}'}"
                                    Grid.Row="0"
                                    Grid.Column="0" />
                                <Label
                                    Text="{Binding Note}"
                                    Grid.Row="0"
                                    Grid.Column="1" />
                                <Label
                                    Text="{Binding ClassList}"
                                    Grid.Row="0"
                                    Grid.Column="2" />
                                <Button
                                    StyleClass="DeleteButton"
                                    Command="{Binding DeleteCommand}"
                                    Grid.Row="0"
                                    Grid.Column="3" />
                                <BoxView
                                    StyleClass="Bar"
                                    Margin="0"
                                    WidthRequest="1600"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="4"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>