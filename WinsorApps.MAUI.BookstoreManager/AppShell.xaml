<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WinsorApps.MAUI.BookstoreManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:shared="clr-namespace:WinsorApps.MAUI.Shared.Bookstore.Pages;assembly=WinsorApps.MAUI.Shared.Bookstore"
    xmlns:pages="clr-namespace:WinsorApps.MAUI.BookstoreManager.Pages"
    xmlns:local="clr-namespace:WinsorApps.MAUI.BookstoreManager"
    Shell.FlyoutBehavior="Flyout"
    Title="Winsor Bookstore Manager">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Student Orders"
        ContentTemplate="{DataTemplate pages:StudentCheckout}"
        Route="StudentCheckout" />
    <ShellContent
        Title="Report Page"
        ContentTemplate="{DataTemplate pages:ReportPage}"
        Route="ReportPage" />
</Shell>
